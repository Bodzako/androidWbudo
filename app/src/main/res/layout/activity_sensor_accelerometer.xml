<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boxInsetLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".SensorAccelerometer">
   <!-- tools:deviceIds="wear"-->

   <TextView
       android:id="@+id/txt_azi2"
       android:layout_width="411dp"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:text="Akcelerometr"
       android:textAlignment="center"
       android:textColor="#000"
       android:textSize="40sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       tools:ignore="MissingConstraints" />

   <TextView
       android:id="@+id/xaxis"
       android:layout_width="50dp"
       android:layout_height="74dp"
       android:layout_marginTop="80dp"
       android:visibility="visible"
       app:layout_constraintEnd_toStartOf="@+id/yaxis"
       app:layout_constraintHorizontal_bias="0.461"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/txt_azi2" />

   <TextView
       android:id="@+id/yaxis"
       android:layout_width="50dp"
       android:layout_height="74dp"
       android:layout_marginTop="80dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.498"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/txt_azi2" />

   <TextView
       android:id="@+id/zaxis"
       android:layout_width="50dp"
       android:layout_height="74dp"
       android:layout_marginTop="80dp"
       android:visibility="visible"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.587"
       app:layout_constraintStart_toEndOf="@+id/yaxis"
       app:layout_constraintTop_toBottomOf="@+id/txt_azi2" />


</androidx.constraintlayout.widget.ConstraintLayout>